<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Separator?>

<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.RadioButton?>
<BorderPane xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" prefWidth="800" prefHeight="600"
            fx:controller="controller.impl.DefaultAuthenticationController">
    <center>
        <GridPane alignment="CENTER">
            <Label text="AUTHENTICATION"
                   GridPane.halignment="CENTER" GridPane.rowIndex="0" GridPane.columnIndex="0" />
            <Label text="REGISTRATION"
                   GridPane.halignment="CENTER" GridPane.rowIndex="0" GridPane.columnIndex="1" />
            <!-- Login side -->
            <GridPane hgap="10" vgap="5" alignment="CENTER" GridPane.rowIndex="1" GridPane.columnIndex="0">
                <padding><Insets top="10" right="25" bottom="10" left="10" /></padding>
                <Label text="Utilizator:"
                       GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.halignment="RIGHT" />
                <TextField GridPane.rowIndex="0" GridPane.columnIndex="1" GridPane.halignment="LEFT" />
                <Label text="Parola:"
                       GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.halignment="RIGHT" />
                <PasswordField GridPane.rowIndex="1" GridPane.columnIndex="1" GridPane.halignment="LEFT" />
                <Button text="LOGIN" GridPane.rowIndex="2" GridPane.columnIndex="1" GridPane.halignment="RIGHT"/>
            </GridPane>
            <Separator orientation="VERTICAL" GridPane.rowIndex="1" GridPane.columnIndex="1" GridPane.rowSpan="2" />
            <!-- Register side -->
            <GridPane hgap="10" vgap="5" alignment="CENTER" GridPane.rowIndex="1" GridPane.columnIndex="1">
                <padding><Insets top="10" right="10" bottom="10" left="25" /></padding>
                <Label text="Firstname:"
                       GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.halignment="RIGHT" />
                <TextField fx:id="textFieldRegisterFirstName" GridPane.rowIndex="0" GridPane.columnIndex="1" GridPane.halignment="LEFT" />
                <Label text="Lastname:"
                       GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.halignment="RIGHT" />
                <TextField fx:id="textFieldRegisterLastName" GridPane.rowIndex="1" GridPane.columnIndex="1" GridPane.halignment="LEFT" />
                <Label text="Email:"
                       GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.halignment="RIGHT" />
                <TextField fx:id="textFieldRegisterEmail" GridPane.rowIndex="2" GridPane.columnIndex="1" GridPane.halignment="LEFT" />
                <Label text="Password:"
                       GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.halignment="RIGHT" />
                <PasswordField fx:id="textFieldRegisterPassword" GridPane.rowIndex="3" GridPane.columnIndex="1" GridPane.halignment="LEFT" />
                <Label text="Repeat password:"
                       GridPane.rowIndex="4" GridPane.columnIndex="0" GridPane.halignment="RIGHT" />
                <PasswordField fx:id="textFieldRegisterPasswordRepeat" GridPane.rowIndex="4" GridPane.columnIndex="1" GridPane.halignment="LEFT" />
                <Label text="Affiliation:"
                       GridPane.rowIndex="5" GridPane.columnIndex="0" GridPane.halignment="RIGHT" />
                <TextField fx:id="textFieldRegisterAffiliation" GridPane.rowIndex="5" GridPane.columnIndex="1" GridPane.halignment="LEFT" />
                <Label text="Listener"
                       GridPane.rowIndex="6" GridPane.columnIndex="0" GridPane.halignment="RIGHT" />
                <RadioButton fx:id="radioButtonRegisterUserRoleListener" GridPane.rowIndex="6" GridPane.columnIndex="1" GridPane.halignment="LEFT"></RadioButton>
                <Label text="Author"
                       GridPane.rowIndex="7" GridPane.columnIndex="0" GridPane.halignment="RIGHT" />
                <RadioButton fx:id="radioButtonRegisterUserRoleAuthor" GridPane.rowIndex="7" GridPane.columnIndex="1" GridPane.halignment="LEFT"></RadioButton>
                <Label text="Reviewer"
                       GridPane.rowIndex="8" GridPane.columnIndex="0" GridPane.halignment="RIGHT" />
                <RadioButton fx:id="radioButtonRegisterUserRoleReviewer" GridPane.rowIndex="8" GridPane.columnIndex="1" GridPane.halignment="LEFT"></RadioButton>
                <Label text="Staff"
                       GridPane.rowIndex="9" GridPane.columnIndex="0" GridPane.halignment="RIGHT" />
                <RadioButton fx:id="radioButtonRegisterUserRoleStaff" GridPane.rowIndex="9" GridPane.columnIndex="1" GridPane.halignment="LEFT"></RadioButton>
                <Button text="Register" onAction="#handleRegister" GridPane.rowIndex="10" GridPane.columnIndex="1" GridPane.halignment="RIGHT"/>
            </GridPane>
        </GridPane>
    </center>
    <bottom>
        <fx:include source="../parts/Footer.fxml"></fx:include>
    </bottom>
</BorderPane>